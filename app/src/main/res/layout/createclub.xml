<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sendmsg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00000000"
    android:orientation="vertical"
    tools:context="com.example.xd.universitybazaarsystem.CreateClub">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Club Name"
        android:id="@+id/select"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Club Introduction"
        android:layout_weight="1"
        android:gravity="top"
        android:id="@+id/func" />
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/admin" />

    <Button
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Send a Request for Create Club "
    android:textColor="@android:color/white"
    android:fontFamily="sans-serif-condensed"
    android:background="@android:color/holo_blue_dark"
    android:layout_gravity="end"
    android:id="@+id/send10"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID of Club you want to Delete"
        android:id="@+id/id"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Delete Request"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:background="@android:color/holo_blue_dark"
        android:layout_gravity="end"
        android:id="@+id/btnDelete"/>

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All Request Status"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/send111"/>



</LinearLayout>