<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/club_a_collection_of_brothers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xd.universitybazaarsystem.ACollectionOfBrothers"
    android:background="#00000000">


    <TextView
        android:id="@+id/etClubName"
        android:layout_below="@id/ivuta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="sans-serif"
        android:text="Club Name: A Collection of Brothers (COB)"
        android:textSize="14sp"
        android:paddingTop="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        />

    <TextView
        android:id="@+id/etAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A Collection of Brothers at the University of Texas at Arlington was established as a means of social networking amongst males on campus and as a support system for males to fellowship together regardless of classification, organization affiliation, or any other factor that could portray diversity amongst one another. We provide educational, cultural, and social programs along with community service and fellowship events that encourage us to be better leaders and role models."
        android:fontFamily="sans-serif"
        android:layout_marginBottom="3dp"
        android:textSize="14sp"
        android:paddingTop="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:layout_below="@+id/etClubName"
        />

    <ImageView
        android:id="@+id/ivuta"
        android:src="@drawable/utarlington"
        android:cropToPadding="false"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:id="@+id/iblogin"
        android:foregroundGravity="fill"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:text="Send a Email to Join"
        android:textAllCaps="false"
        android:background="@android:color/background_light"
        android:layout_marginTop="50dp"
        android:layout_height="35dp"
        android:layout_below="@+id/etAbout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

